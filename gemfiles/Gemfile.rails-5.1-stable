source 'https://rubygems.org'

gemspec path: '..'

gem "rails", '~> 5.1'

platforms :ruby, :mswin, :mingw do
  case ENV['DB']
  when 'postgresql'
    gem 'pg'
  when 'mysql'
    gem 'mysql2'
  when 'sqlite'
    gem 'sqlite3'
  else
    gem 'sqlite3'
  end
end

group :test do
  gem 'database_cleaner'
  gem 'factory_bot_rails'
  gem 'rspec-rails'
  gem 'rubocop'
  gem 'codeclimate-test-reporter', require: nil
end
